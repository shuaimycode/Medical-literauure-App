<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".me">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="50dp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/imv_touxiang"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/touxiang"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小明"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imv_touxiang"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_zhanghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号：wd123456"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imv_touxiang"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/tv_username"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/upper"
            android:layout_marginTop="150dp"
            style="@style/wrap_layout" >
            <!-- 上圆角-->
            <LinearLayout
                android:id="@+id/btn_news"
                style="@style/top_layout">
                <TextView style="@style/usertext" android:text="我的资料" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>

            <!-- 分割线 -->
            <View style="@style/bg_line"/>
            <!-- 无圆角-->
            <LinearLayout
                android:id="@+id/btn_contribute"
                style="@style/mid_layout">
                <TextView style="@style/usertext" android:text="投稿" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>

            <View style="@style/bg_line"/>
            <!-- 下圆角-->
            <LinearLayout style="@style/bottom_layout">
                <TextView style="@style/usertext" android:text="收藏" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>

        </LinearLayout>

        <!-- 全圆角-->
        <LinearLayout
            android:layout_marginTop="340dp"
            style="@style/wrap_layout">
            <LinearLayout
                android:id="@+id/btn_set"
                style="@style/single_layout">
                <TextView style="@style/usertext" android:text="设置"/>
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>

        </LinearLayout>







</FrameLayout>